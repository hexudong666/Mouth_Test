<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hexudong.mapper.ArticleMapper">
	<resultMap type="com.hexudong.eitity.Article" id="articleMapper">
		<result property="channelId" column="channel_id"/>
		<result property="categoryId" column="category_id"/>
		<association property="channel" column="channel_id" javaType="com.hexudong.eitity.Channel" select="findChannel"></association>
		<association property="category" column="category_id" javaType="com.hexudong.eitity.Category" select="findCatigory"></association>
	</resultMap>
	
	<!-- 每个作者的文章 -->
	<select id="listByUser" resultMap="articleMapper">
		SELECT id,title,channel_id,category_id , created,status 
		  FROM cms_article
		  WHERE user_id = ${id} AND deleted=0
		  ORDER BY id DESC  
	</select>
	
	<select id="list" resultMap="articleMapper">
		SELECT id,title,channel_id,category_id ,user_id, created,status 
		  FROM cms_article
		  WHERE status = #{value} AND deleted=0
		  ORDER BY id DESC 
	</select>
	
	
	<!-- 获取频道 -->
	<select id="findChannel" resultType="com.hexudong.eitity.Channel">
		SELECT id,name FROM cms_channel WHERE id=#{value}
	</select>
	
	<!-- 获取分类 -->
	<select id="findCatigory" resultType="com.hexudong.eitity.Category">
		SELECT id,name FROM cms_category WHERE id=#{value}
	</select>
	
	<select id="findById" resultMap="articleMapper">
		SELECT * FROM cms_article WHERE id=#{value} AND deleted=0
	</select>
	
	<select id="getById" resultMap="articleMapper">
		SELECT * FROM cms_article WHERE id=#{value} AND deleted=0
	</select>
	
</mapper>